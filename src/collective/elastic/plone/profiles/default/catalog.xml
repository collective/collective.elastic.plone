<?xml version="1.0" encoding="utf-8"?>
<object meta_type="Plone Catalog Tool"
        name="portal_catalog"
>
  <index meta_type="ZCTextIndex"
         name="SearchableText"
         remove="true"
  />
  <index meta_type="ElasticSearchProxyIndex"
         name="SearchableText"
  >
    <querytemplate>
    "query": {
        "multi_match": {
            "query": "{{keys[0]}}",
            "fields": [
                "title.{{language}}*^1.5",
                "text__extracted.{{language}}"
            ],
            "analyzer": "{{analyzer}}",
            "type": "most_fields",
            "minimum_should_match": "75%"
        }
    }
    </querytemplate>
  </index>
</object>
